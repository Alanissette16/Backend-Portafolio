# ===============================
# VARIABLES DE ENTORNO - EJEMPLO
# ===============================
# Copia este archivo como .env y completa con tus valores reales
# NUNCA subas el archivo .env al repositorio (ya está en .gitignore)

# ===============================
# BASE DE DATOS (Neon PostgreSQL)
# ===============================
# Obtén estos valores desde tu panel de Neon.tech
# Formato: postgresql://[user]:[password]@[hostname]/[database]?sslmode=require

# Para Spring Boot, separa los componentes:
DATABASE_URL=jdbc:postgresql://ep-example-123456.us-east-2.aws.neon.tech/neondb?sslmode=require
DATABASE_USERNAME=tu_usuario_neon
DATABASE_PASSWORD=tu_password_neon

# ===============================
# SEGURIDAD JWT
# ===============================
# Genera una clave secreta fuerte (mínimo 256 bits)
JWT_SECRET=MiClaveSecretaSuperSeguraParaProduccion2024XYZ123ChangeThis

# ===============================
# CONFIGURACIÓN DE EMAIL
# ===============================
# Gmail: https://support.google.com/accounts/answer/185833
# Usa "App Password" no tu contraseña normal
MAIL_USERNAME=tu_email@gmail.com
MAIL_PASSWORD=xxxx xxxx xxxx xxxx
MAIL_FROM=noreply@portafolio.com
MAIL_FROM_NAME=Portafolio Programadores

# ===============================
# CLOUDINARY (Almacenamiento de Imágenes)
# ===============================
# Obtén estas credenciales desde cloudinary.com/console
CLOUDINARY_CLOUD_NAME=tu_cloud_name
CLOUDINARY_API_KEY=tu_api_key
CLOUDINARY_API_SECRET=tu_api_secret

# ===============================
# CORS (URLs permitidas)
# ===============================
# Separa múltiples URLs con comas
# Ejemplo: http://localhost:4200,https://tu-app.web.app
CORS_ORIGINS=http://localhost:4200,http://localhost:3000

# ===============================
# CONFIGURACIÓN DEL SERVIDOR
# ===============================
# Puerto del servidor (8080 por defecto)
# Render y otros servicios cloud usan el puerto automáticamente
SERVER_PORT=8080

# ===============================
# JPA/HIBERNATE
# ===============================
# Mostrar SQL en logs (false en producción para mejor rendimiento)
JPA_SHOW_SQL=false

# ===============================
# NOTIFICACIONES
# ===============================
# Minutos antes de la asesoría para enviar recordatorio
NOTIFICATION_REMINDER_MINUTES=30
